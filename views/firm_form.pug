extends layout

block content

    h1 #{title}
    form(method='POST' action='')
        div.form-group
            label(for='firm_name') Firm:
            input#firm_name.form-control(type='text', placeholder='PE, VS, Stock Leaders' name='firm_name' required='true' value=(undefined===firm ? '' : firm.firm_name) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg