extends layout

block content
    h1 #{title}

    form(class='form-style')(method='POST' action='')
        div.form-group
            label(for='company_name') Company Name:
            input#company_name.form-control(type='text', placeholder='' name='company_name' required='true' value=(undefined===company ? '' : company.company_name) )
        div.form-group
            label(for='leadership_page') Leadership URL:
            input#leadership_page.form-control(type='text', placeholder='' name='leadership_page' value=(undefined===company ? '' : company.leadership_page) )
        div.form-group
            label(for='titanhouse_page') TitanHouse Page:
            input#titanhouse_page.form-control(type='url', placeholder='' name='titanhouse_page' value=(undefined===company ? '' : company.titanhouse_page) required='true')
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
